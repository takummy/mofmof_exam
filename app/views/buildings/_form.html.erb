<%= form_for(building) do |f| %>
  <% if building.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(building.errors.count, "error") %> prohibited this building from being saved:</h2>

      <ul>
      <% building.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :rent %>
    <%= f.text_field :rent, min: 1 %>
  </div>

  <div class="field">
    <%= f.label :address %>
    <%= f.text_field :address %>
  </div>

  <div class="field">
    <%= f.label :age %>
    <%= f.number_field :age, min: 1 %>
  </div>

  <div class="field">
    <%= f.label :notes %>
    <%= f.text_area :notes %>
  </div>

  <div class="field">
    <%= f.label :nearest_stations %>
    <%= f.fields_for :nearest_stations do |ff| %>
      <div class="field">
        <%= ff.label :line %>
        <%= ff.text_field :line %>
      </div>
      <div class="field">
        <%= ff.label :name %>
        <%= ff.text_field :name %>
      </div>
      <div class="field">
        <%= ff.label :minute_walk %>
        <%= ff.number_field :minute_walk %>
      </div>
    <% end %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
