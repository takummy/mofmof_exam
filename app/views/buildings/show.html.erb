<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @building.name %>
</p>

<p>
  <strong>Rent:</strong>
  <%= @building.rent %>
</p>

<p>
  <strong>Address:</strong>
  <%= @building.address %>
</p>

<p>
  <strong>Age:</strong>
  <%= @building.age %>
</p>

<p>
  <strong>Notes:</strong>
  <%= @building.notes %>
</p>

<div class="stations-info">
  <% @building.nearest_stations.each do |station| %>
    <div class="station-info">
      <p>
        <strong>Line:</strong>
        <%= station.line %>
      </p>

      <p>
        <strong>Name:</strong>
        <%= station.name %>
      </p>

      <p>
        <strong>Minute Walk</strong>
        <%= station.minute_walk %>
      </p>
    </div>
  <% end %>
</div>

<%= link_to 'Edit', edit_building_path(@building) %> |
<%= link_to 'Back', buildings_path %>
