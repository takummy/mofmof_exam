<p id="notice"><%= notice %></p>

<h1>物件一覧</h1>

<table>
  <thead>
    <tr>
      <th>物件名</th>
      <th>賃料</th>
      <th>住所</th>
      <th>築年数</th>
      <th>備考</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @buildings.each do |building| %>
      <tr>
        <td><%= building.name %></td>
        <td><%= building.rent %><br>円</td>
        <td><%= building.address %></td>
        <td><%= building.age %><br>年</td>
        <td><%= building.notes %></td>
        <td><%= link_to '詳細', building %></td>
        <td><%= link_to '編集', edit_building_path(building) %></td>
        <td><%= link_to '削除', building, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

